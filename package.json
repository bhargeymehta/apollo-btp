{
  "name": "apollo-btp",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "babel src -d .build --source-maps",
    "host": "node index.js",
    "buildAndRun": "npm run build && npm run host",
